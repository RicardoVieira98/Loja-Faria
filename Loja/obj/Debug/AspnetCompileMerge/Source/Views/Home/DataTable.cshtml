@using Loja.Modelos;
@{
    ViewBag.Title = "DataTable";
}
<h2>Base de Dados</h2>
<form id="editTable" method="post">
    <table id="database" class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th data-editable="true">Id</th>
                <th data-editable="true">Nome</th>
                <th data-editable="true">Tipo</th>
                <th data-editable="true">Preço</th>
                <th data-editable="true">Descrição</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Produto produto in @ViewBag.TodosOsProdutos)
            {
                <tr>
                    <td data-editable="true">@produto.Id</td>
                    <td data-editable="true">@produto.Nome</td>
                    <td data-editable="true">@produto.Preco</td>
                    <td data-editable="true">@produto.Seccao</td>
                    <td data-editable="true">@produto.Tipo</td>
                    <td data-editable="true">@produto.Descricao</td>
                    <td data-editable="true">@produto.Url</td>
                </tr>
            }
        </tbody>
    </table>
    <input id="submitTable" type="submit"/>
</form>
