<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Loja</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/Styles/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Styles/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/Styles/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    @Html.Partial("_navbar")
    <div class="container body-content" style="width:100%;">
        @RenderBody()
        <hr />
        @Html.Partial("_footer")
    </div>
    @RenderSection("scripts", required: false)
    <script src="~/Content/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Content/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Content/Scripts/jquery.validate.js"></script>
    <script src="~/Content/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/Scripts/modernizr-2.8.3.js"></script>
    <script>
        $(".img div a").on("click", function () {
            var nomeProduto = $(this).data("produto-nome");
            var precoProduto = $(this).data("produto-preco");
            var idProduto = $(this).data("produto-id");
            var tipoProduto = $(this).data("produto-tipo");
            var seccaoProduto = $(this).data("produto-seccao");
            var descricaoProduto = $(this).data("produto-descricao");
            var urlProduto = $(this).data("produto-url");
            $.ajax({
                url: "Loja/Product/Index",
                type: "post",
                data: "produto.Nome=" + nomeProduto + "&produto.Preco=" + precoProduto + "&produto.Id=" + idProduto + "&produto.Tipo=" + tipoProduto + "&produto.Seccao=" + seccaoProduto + "&produto.Url=" + urlProduto + "&produto.Descricao=" + descricaoProduto
            });
        });
    </script>
</body>
</html>