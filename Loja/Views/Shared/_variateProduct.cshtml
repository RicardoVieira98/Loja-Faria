@using Loja.Modelos;
<div class="container">
    <div class="row">
        <div class="col-sm-2" style="position:center; border-bottom:groove;border-top:groove; border-right:groove; border-left:groove">
            <!--Regular expression? just check the checkboxes-->
            <h4> Filtrar por: </h4>
            <input type="checkbox" name="vehicle1" value="Bike">Pulseiras<br>
            <input type="checkbox" name="vehicle2" value="Car">Fios <br>
            <input type="checkbox" name="vehicle3" value="Boat">Aneis<br>
        </div>
        @foreach (Produto produto in ViewBag.Produtos)
        {
            string nomeProduto = produto.Seccao.First() + "_" + produto.Tipo.Substring(0, 3) + "-" + produto.Nome.Replace(" ", "_");
            <div class="col-sm-3 img1">
                    <a class="produto" href="/Product/Index?nomeProduto=@nomeProduto">
                        <div>
                            <img alt="@produto.Descricao" width="200" height="100" src="@produto.Url" />
                            <div class="overlay">@produto.Preco</div>
                        </div>
                    </a>
                   <h4>@produto.Descricao</h4>
            </div>
        }
    </div>
</div>
