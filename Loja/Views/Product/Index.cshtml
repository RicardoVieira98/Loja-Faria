<script>
    $("#min").click(function () {
        var contador = $("#num").attr('value');
        if (contador >= 1) {
            var newContador = contador - 1;
            $("#num").removeAttr('value');
            var val = document.createAttribute('value');
            val.value = newContador;
            $("#num").attr('value', val.value);
        }
        else { alert("Erro nao pode pedir negativos Este aviso é temporario") }
    })
    $("#pl").click(function () {
        var contador = $("#num").attr('value');
        if (contador <= 5) {
            var newContador = +contador + +1;
            $("#num").removeAttr('value');
            var val = document.createAttribute('value');
            val.value = newContador;
            $("#num").attr('value', val.value);
        }
        else { alert("Erro nao pode pedir mais que 6 Este aviso é temporario") }
    })

    $("#add").click(function () {
        alert("Foi adicionado ao carrinho")
    })
</script>